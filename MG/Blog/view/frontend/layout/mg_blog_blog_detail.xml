<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-right" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="MG_Blog::css/w3.css" rel="stylesheet" type="text/css"  />
    </head>
    <body>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="wishlist_sidebar" remove="true"/>
        <referenceContainer name="sidebar.additional">
            <block class="MG\Blog\Block\PostImage" name="post.image" template="MG_Blog::post_image.phtml" cacheable="false"/>
        </referenceContainer>
        <referenceBlock name="content">
            <block class="MG\Blog\Block\PostDetail" name="post.content" template="MG_Blog::post_detail.phtml" cacheable="false"/>
        </referenceBlock>
    </body>
</page>
